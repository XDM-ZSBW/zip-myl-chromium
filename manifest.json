{
  "manifest_version": 3,
  "name": "Myl.Zip Authentication",
  "version": "2.0.0",
  "description": "A publicly private authentication service for secure device verification and portal access",
  "author": "Myl.Zip Team",
  
  "permissions": [
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://myl.zip/*",
    "https://*.myl.zip/*",
    "https://api.myl.zip/*",
    "https://zaido.org/*"
  ],
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://myl.zip/*", "https://zaido.org/*"],
      "js": ["content-scripts/content.js"],
      "css": ["content-scripts/content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Myl.Zip Authentication Service"
  },
  
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  }
}
